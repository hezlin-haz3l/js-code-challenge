//document.write("</br>")
//document.write("##")

// 1)DO the 1st column
// 2) Every iteration add a new "#"

var hashtag = "#"
for (var i = 0; i < 4; i++) {
  document.write(hashtag)
  document.write("</br>")
  hashtag += "#"
}
for (var i = 0; i < 4; i++) {
  for (var j = 0; j < 4-i; j++){
  document.write("#")
}
  document.write("</br>")
}
